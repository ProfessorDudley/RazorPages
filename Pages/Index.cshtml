@page
@model IndexModel
@{
    ViewData["Title"] = "Computer Specification";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>
        My Computer Specs
    </h1>
    <ul>
        <li>@Model.Processor</li>
        <li>@Model.Memory</li>
        <li>@Model.Graphics</li>
        @for(int i = 0; i < @Model.Storage.GetLength(0); i++){
            <li><b>Disk @i: </b>@Model.Storage[i]</li>
        }
        <li>@Model.Motherboard</li>
        <li>@Model.Power</li>
        <li>@Model.Case</li>
    </ul>
</body>
</html>